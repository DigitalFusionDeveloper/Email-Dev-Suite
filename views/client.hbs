<h1>{{clientName}}</h1>
<hr>
<div class="row">
    <div class="col s4">
        <a href="/de/{{clientName}}" class="waves-effect waves-light btn light-blue accent-2"><i class="material-icons right">extension</i>See Data Extensions</a>
    </div>
</div>
<h1></h1>
<div class="row folderBorder">
    <form class="col s12" action="/folder/create/{{clientName}}" method="post">
        <div class="row">
            <div class="input-field col s8">
                <input required autofocus placeholder="Includes: Data Extensions, My Emails, Portfolio, and User-Initiated" id="folderName" type="text" class="validate" name="folderName">
                <label for="folderName">Folder Name</label>
            </div>
            <a class="waves-effect waves-light btn light-blue accent-2" href="#modal1">Create Folders</a>
        </div>
        <div id="modal1" class="modal">
            <div class="modal-content">
                <h4>Warning!</h4>
                <p>This will immediately create 4 folders in this business unit.</p>
            </div>
            <div class="modal-footer">
                <button class="btn waves-effect waves-light green" type="submit" name="action">Create Folders<i class="material-icons right">create_new_folder</i></button>
                <a href="#!" class="modal-action modal-close waves-effect waves-light btn red">Close</a>
            </div>
        </div>
    </form>
</div>

{{#if message}}
    <hr>
    <div class="row">
        <div class="col s6">
            <div class="card blue-grey">
                <div class="card-content white-text">
                    <span class="card-title">{{message.message}}</span>
                    {{#each message.values}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
{{/if}}
