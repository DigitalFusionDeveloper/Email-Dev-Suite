<h1>{{clientName}}</h1>
<hr>
<div class="row">
    <div class="col s4">
        <a href="/de/{{clientName}}" class="waves-effect waves-light btn"><i class="material-icons right">extension</i>Data Extensions</a>
    </div>
</div>
<div class="row">
    <form class="col s12" action="/folder/create/{{clientName}}" method="post">
        <div class="row">
            <div class="input-field col s8">
                <input required placeholder="Includes: Data Extensions, My Emails, Portfolio, and User-Initiated" id="folderName" type="text" class="validate" name="folderName">
                <label for="folderName">Folder Name</label>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Create Folders<i class="material-icons right">create_new_folder</i></button>
        </div>
    </form>
    <ul>
        {{#each message}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
</div>
